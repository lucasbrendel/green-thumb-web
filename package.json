{
  "name": "green-thumb-web",
  "version": "0.1.0",
  "description": "Plant Tracker",
  "main": "green-thumb.js",
  "repository": "https://github.com/lucasbrendel/green-thumb-web",
  "author": "Lucas Brendel <lucasbrendel@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.1.6",
    "@babel/preset-env": "^7.1.6",
    "autoprefixer": "^9.3.1",
    "node-sass": "^4.10.0",
    "nodemon": "^1.18.6",
    "npm-run-all": "^4.1.3",
    "postcss": "^7.0.6",
    "postcss-cli": "^6.0.1",
    "rollup": "^0.67.3",
    "rollup-plugin-babel": "^4.0.3",
    "rollup-plugin-postcss": "^1.6.2",
    "rollup-plugin-uglify": "^6.0.0",
    "rollup-plugin-wasm": "^3.0.0",
    "serve": "^10.1.1"
  },
  "scripts": {
    "build:js": "rollup -c",
    "build:rs": "cargo web deploy --release",
    "build:scss": "node-sass --include-path scss scss/green-thumb.scss css/green-thumb.css",
    "build:css": "postcss --use autoprefixer -o static/green-thumb.css css/green-thumb.css",
    "build:style": "run-s build:scss build:css",
    "build:copy": "cp target/deploy/green-thumb.css release/ && cp target/deploy/green-thumb.wasm release/ && cp target/deploy/index.html release/ && cp target/deploy/favicon.ico release/",
    "build": "run-s clean:deploy build:rs build:js build:style build:copy",
    "clean:deploy": "rm -rf /release",
    "prod": "run-s build serve",
    "serve": "serve -p 8080 release",
    "watch:rs": "cargo web start --release",
    "test": "echo \"Error: no tests!\" && exit 1"
  }
}
